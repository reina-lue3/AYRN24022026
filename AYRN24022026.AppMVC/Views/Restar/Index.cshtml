@{
}
@{
    ViewData["Title"] = "Calculadora de Resta";
}

<div class="text-center" style="margin-top: 50px;">
    <h1 class="display-4">Restas</h1>
    <p>Introduce dos números para obtener la Resta.</p>

    <div class="card d-inline-block p-4 shadow-sm" style="width: 350px;">
        <form asp-controller="Restar" asp-action="Index" method="post">
            <div class="form-group mb-3">
                <input type="number" step="any" name="num1" class="form-control" placeholder="Primer número" required />
            </div>

            <div class="mb-3" style="font-size: 2rem; font-weight: bold;"> - </div>

            <div class="form-group mb-3">
                <input type="number" step="any" name="num2" class="form-control" placeholder="Segundo número" required />
            </div>

            <button type="submit" class="btn btn-danger w-100">Calcular Resta</button>
        </form>

        @if (ViewBag.Resultado != null)
        {
            <hr />
            <div class="alert alert-success">
                <strong>Resultado:</strong> @ViewBag.Resultado
            </div>
        }
    </div>
</div>
