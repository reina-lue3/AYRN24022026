<div class="text-center">
    <h2 class="text-success">Operación: Multiplicación</h2>
    <p class="text-muted" Integrante: [Nuria]</p>
    <hr />
</div>
<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow">
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">Multiplicando (Factor 1):</label>
                        <input type="number" step="any" name="factor1" class="form-control"
                               placeholder="Ej: 5" value="@ViewBag.Factor1" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Multiplicador (Factor 2):</label>
                        <input type="number" step="any" name="factor2" class="form-control"
                               placeholder="Ej: 10" value="@ViewBag.Factor2" required />
                    </div>

                    <button type="submit" class="btn btn-success w-100">Calcular Producto</button>
                </form>

                @if (ViewBag.Resultado != null)
                {
                    <div class="mt-4 p-3 bg-light border rounded text-center">
                        <h4 class="mb-0">
                            @ViewBag.Factor1 × @ViewBag.Factor2 = <strong>@ViewBag.Resultado</strong>
                        </h4>
                    </div>
                }
            </div>
        </div>

        <div class="mt-3 text-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-link">Volver al Inicio</a>
        </div>
    </div>
</div>